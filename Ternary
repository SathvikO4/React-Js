    function App() {
    const isLoggedIn = false;
    return (
      <div>
        {isLoggedIn ? (<h1>Welcome back, user</h1>) : (<h1>Please log in</h1>)}
        {isLoggedIn && <h2>You have new notifications</h2>}
      </div>
    );
  }

  const root = ReactDOM.createRoot(document.getElementById('app'));
